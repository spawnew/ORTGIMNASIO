@model GymMembershipApp.Models.Attendance

@{
    ViewData["Title"] = "Check-In";
}

<h1 class="mb-4"><i class="bi bi-box-arrow-in-right"></i> Member Check-In</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="CheckIn" method="post" id="checkInForm">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="MemberId" class="form-label">Select Member</label>
                        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId" required>
                            <option value="">-- Select a member --</option>
                        </select>
                        <span asp-validation-for="MemberId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes (Optional)</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Add any notes about this check-in..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i> Check In
                        </button>
                        <a asp-action="QuickCheckIn" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-search"></i> Use Quick Check-In
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Information</h5>
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>Check-In Process:</strong></p>
                <ul class="mb-0">
                    <li>Select the member from the dropdown</li>
                    <li>Add optional notes if needed</li>
                    <li>Click "Check In" to complete</li>
                    <li>Only members with active memberships can check in</li>
                </ul>
                <hr>
                <p class="mb-0">
                    <strong>Quick Check-In:</strong><br>
                    For faster check-ins, use the <a asp-action="QuickCheckIn">Quick Check-In</a> feature with search.
                </p>
            </div>
        </div>

        <div class="card mt-3 border-success">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0"><i class="bi bi-clock"></i> Today's Activity</h6>
            </div>
            <div class="card-body">
                <a asp-action="Today" class="btn btn-success w-100">
                    <i class="bi bi-calendar-check"></i> View Today's Attendance
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple form validation
        document.getElementById('checkInForm').addEventListener('submit', function(e) {
            const memberId = document.querySelector('[name="MemberId"]').value;
            if (!memberId) {
                e.preventDefault();
                alert('Please select a member');
                return false;
            }
        });
    </script>
}
